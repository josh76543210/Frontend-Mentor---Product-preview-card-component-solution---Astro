---
import favicon from '../images/favicon-32x32.png';
import '../styles/reset.css';
import '../styles/global.css';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
}
const {title = "Frontend Mentor | Product preview card component"} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{title}</title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="32x32" href={favicon.src}>
</head>
<body>
  <main class="flex-center">
    <slot />
  </main>
  <Footer />
</body>
</html>

<style>
  /* Main */
main {
  min-height: 100vh;
  min-width: calc((250 / 16) * 1rem);
  padding: calc((30 / 16) * 1rem) calc((15 / 16) * 1rem);
}
</style>